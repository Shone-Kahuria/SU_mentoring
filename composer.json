{
    "name": "shone-kahuria/su-mentoring",
    "description": "Professional mentoring platform connecting mentors and mentees",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "phpmailer/phpmailer": "^6.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "includes/"
        }
    },
    "config": {
        "vendor-dir": "vendor",
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('.env.php') || copy('.env.example.php', 'includes/.env.php');\""
        ]
    }
}
